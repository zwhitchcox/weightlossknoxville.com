---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  image?: string;
}

const { title, description, pubDate, slug, image } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group overflow-hidden rounded-xl border border-neutral-200 bg-white shadow-sm transition-shadow hover:shadow-md">
  <a href={`/blog/${slug}/`} class="block">
    {image ? (
      <img
        src={image}
        alt={title}
        class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
    ) : (
      <div class="flex h-48 items-center justify-center bg-gradient-to-br from-primary/10 to-primary-light/10">
        <svg class="h-12 w-12 text-primary/30" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5" />
        </svg>
      </div>
    )}
  </a>
  <div class="p-5">
    <time datetime={pubDate.toISOString()} class="text-xs font-medium text-neutral-500">
      {formattedDate}
    </time>
    <h3 class="mt-2 font-serif text-lg font-bold text-neutral-900 transition-colors group-hover:text-primary">
      <a href={`/blog/${slug}/`}>{title}</a>
    </h3>
    <p class="mt-2 line-clamp-3 text-sm leading-relaxed text-neutral-600">
      {description}
    </p>
    <a
      href={`/blog/${slug}/`}
      class="mt-4 inline-flex items-center gap-1 text-sm font-semibold text-primary transition-colors hover:text-primary-light"
    >
      Read More
      <svg class="h-4 w-4 transition-transform group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
      </svg>
    </a>
  </div>
</article>
