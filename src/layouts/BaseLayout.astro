---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEOHead from '../components/SEOHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  article?: boolean;
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  ogImage,
  article = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEOHead
      title={title}
      description={description}
      ogImage={ogImage}
      ogType={article ? 'article' : 'website'}
    />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <!-- CallRail -->
    <script type="text/javascript" src="//cdn.callrail.com/companies/537900585/0c3f6789c4c11b8e98b9/12/swap.js"></script>

    <!-- JSON-LD and additional head content -->
    <slot name="head" />
  </head>
  <body class="flex min-h-screen flex-col bg-neutral-50 font-sans text-neutral-800 antialiased">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
